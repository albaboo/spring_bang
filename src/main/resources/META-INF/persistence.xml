<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="projectBang" transaction-type="RESOURCE_LOCAL">
        
        <!-- Proveïdor JPA (Hibernate) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Classe d'entitat -->
        <class>hibernate.projects.Entity.Player</class>
        <class>hibernate.projects.Entity.Game</class>
        <class>hibernate.projects.Entity.Card</class>
        <class>hibernate.projects.Entity.EquipmentCard</class>
        <class>hibernate.projects.Entity.WeaponCard</class>
        <class>hibernate.projects.Entity.UseCard</class>         
        <class>hibernate.projects.Entity.Role</class>

        <properties>
            <!-- Configuració de la base de dades -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/project_bang"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="super3"/>
            
            <!-- Configuració de Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
        
    </persistence-unit>
    
</persistence>
